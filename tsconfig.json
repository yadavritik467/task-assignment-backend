{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
    "esm": true,
    "logError": true,
  }
}